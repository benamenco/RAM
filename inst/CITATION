citHeader("To cite 'RAM' package in publications use:")

citation(auto=meta)

year <- sub("-.*", "", meta$Date) 
note <- sprintf("R package version %s", meta$Version)  
url <- "https://cran.r-project.org/package=RAM"

citEntry(entry = "misc", 
         author = personList(as.person("Wen Chen"),
                             as.person("Joshua Simpson"), 
                             as.person("C. Andre Levesque")),
         title = "RAM: R for Amplicon-Sequencing-Based Microbial-Ecology",
         year = year,
         note = note,
         url = url,
         textVersion = NULL,
         institution = "Agriculture and Agri-Food Canada / Agriculture et Agroalimentaire Canada")

citFooter("Thank you for using 'RAM'")

